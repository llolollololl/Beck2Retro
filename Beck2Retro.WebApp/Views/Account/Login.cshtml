@using Beck2Retro.WebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #fbeec1;
        font-family: 'Courier New', Courier, monospace;
    }

    h2 {
        color: #ffb703;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .form-container {
        background-color: #2f4f4f;
        padding: 30px;
        border: 2px solid #e59500;
        border-radius: 10px;
        max-width: 600px;
        margin-bottom: 30px;
    }

    .form-group label {
        font-weight: bold;
        color: #fbeec1;
    }

    .form-control {
        background-color: #1a1a1a;
        color: #fffacd;
        border: 1px solid #e59500;
        border-radius: 5px;
        padding: 8px;
    }

        .form-control:focus {
            border-color: #ffb703;
            outline: none;
            box-shadow: 0 0 5px #ffb703;
        }

    .btn-login {
        background-color: #f77f00;
        color: black;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-login:hover {
            background-color: #c1440e;
            color: white;
        }

    .text-danger {
        color: #ff6b6b;
    }

    .checkbox label {
        font-weight: normal;
    }

    a {
        color: #ffb703;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h2>@ViewBag.Title</h2>

<div class="form-container">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4>Use a local account to log in</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group checkbox">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>

        <div class="form-group">
            <input type="submit" value="Log in" class="btn-login" />
        </div>

        <p>
            @Html.ActionLink("Register as a new user", "Register", null, new { @class = "retro-button" })
        </p>
    }
</div>

<div class="form-container">
    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
