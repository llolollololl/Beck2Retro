@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Role", "Create","Roles", new {@class = "btn btn-primary"})
</p>
<hr/>
<table class="table">
    <tr>
        <th>Existing roles in the system</th>
    </tr>
    @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.Name
                     </td>
                </tr>
            }
</table>

<div class="panel panel-info">
    <div class="panel panel-heading">
        Search user
    </div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("ManageUserRoles", "Roles"))
                {
                    <div class="form-group">
                        @Html.TextBox("UserName")
                    </div>
                    <div class="form-group">
                        <input class="btn btn-default" type="submit" value="Search">
                    </div>
                }
            </div>
            <div class="col-md-6">
                @Html.ActionLink("List all users", "Users", "Roles", new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
</div>