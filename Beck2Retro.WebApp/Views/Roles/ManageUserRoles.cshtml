@model Beck2Retro.WebApp.Models.UserRole
@{
    ViewBag.Title = "ManageUserRoles";
}

<h2>ManageUserRoles</h2>

@if(Model != null)
            {
                <div class="panel panel-success">
                    <div class="panel panel-heading">
                        <div class="row">
                            <div class="col-md-6">
                                <h3>
                                    @Model.UserName
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-body">
                        @using (Html.BeginForm("UpdateRoles","Roles",FormMethod.Post)) 
                        {
                                @Html.HiddenFor(model => model.UserName)
                                @Html.HiddenFor(m => m.UserId)
                        
                    for(var i = 0; i< Model.UserRoles.Count; i++)
                    {
                        <div class="checkbox" style="padding-left: 35px;">
                            @Html.CheckBoxFor(role => Model.UserRoles[i].IsChecked, new { id = "userRoles_" + i })

                            @Html.DisplayFor(role => Model.UserRoles[i].Name)

                            @Html.HiddenFor(m => m.UserRoles[i].Id)
                            @Html.HiddenFor(m => m.UserRoles[i].Name)
                        </div>
                    }
                            <input type="submit" value="Update" class="btn btn-primary" />
                        }
                    </div>
                </div>
            }
else
            {
                <h2>User Not Fout</h2>
            }

