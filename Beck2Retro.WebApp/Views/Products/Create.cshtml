@{
    ViewBag.Title = "Create";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #fbeec1;
        font-family: 'Courier New', Courier, monospace;
    }

    h2 {
        color: #ffb703;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .form-horizontal {
        background-color: #2f4f4f;
        padding: 25px;
        border: 2px solid #e59500;
        border-radius: 10px;
        max-width: 700px;
        margin-bottom: 30px;
    }

    .form-group label {
        color: #fbeec1;
        font-weight: bold;
    }

    .form-control {
        background-color: #1a1a1a;
        color: #fffacd;
        border: 1px solid #e59500;
        border-radius: 5px;
        padding: 8px;
    }

        .form-control:focus {
            border-color: #ffb703;
            outline: none;
            box-shadow: 0 0 5px #ffb703;
        }

    .btn-default {
        background-color: #f77f00;
        color: black;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-default:hover {
            background-color: #c1440e;
            color: white;
        }

    .retro-button {
        display: inline-block;
        background-color: #f77f00;
        color: black;
        padding: 10px 20px;
        margin-top: 20px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s;
    }

        .retro-button:hover {
            background-color: #c1440e;
            color: #fff;
        }

    .text-danger {
        color: #ff6b6b;
    }

    .preview {
        margin-top: 10px;
        border: 2px solid #e59500;
        width: 150px;
    }
</style>

<h2>Create Product</h2>

<p>@ViewBag.Feedback</p>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" name="productName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea name="description" class="form-control" required></textarea>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="number" name="price" class="form-control" step="0.01" required />
        </div>

        <div class="form-group">
            <label>Image</label>
            <input type="file" name="image" id="imageInput" class="form-control" accept="image/jpeg,image/png" />
            <img id="preview" class="preview" src="#" alt="Preview" style="display:none;" />
        </div>

        <div class="form-group">
            <label>Category</label>
            @Html.DropDownList("categoryId", (SelectList)ViewBag.Categories, "Select a category", new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "retro-button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // Preview selected image
        document.getElementById('imageInput').addEventListener('change', function (event) {
            const [file] = event.target.files;
            if (file) {
                const preview = document.getElementById('preview');
                preview.src = URL.createObjectURL(file);
                preview.style.display = "block";
            }
        });
    </script>
}
